{
  "name": "afanime-tg-bot",
  "type": "module",
  "version": "0.1.0",
  "private": true,
  "description": "Auto forward anime episodes from NEP ani library.",
  "author": "Flynn Cao",
  "license": "MIT",
  "main": "./dist/start.js",
  "imports": {
    "#root/*": "./build/src/*"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "start": "node dist/start.js",
    "dev": "tsup --watch --onSuccess \"node dist/start.js\"",
    "dev:tsc": "tsc-watch --onSuccess \"tsx ./build/start.ts\"",
    "build": "tsup",
    "build:tsc": "tsc",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
