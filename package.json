    "@grammyjs/runner": "^2.0.3",
    "@grammyjs/storage-mongodb": "^2.4.1",
    "@grammyjs/transformer-throttler": "^1.2.1",
    "@js-joda/core": "^5.6.1",
    "@js-joda/timezone": "^2.18.2",
    "@typegoose/typegoose": "^12.0.0",
    "axios": "^1.6.2",
    "chalk": "^5.3.0",
    "cron": "^3.1.7",
    "dotenv": "^16.3.1",
    "easytimer.js": "^4.6.0",
    "grammy": "^1.19.2",
    "moment": "^2.30.1",
    "mongodb": "~6.3.0",
    "mongoose": "^8.0.4",
    "node-cron": "^3.0.3",
    "node-fetch": "^3.3.2",
    "tsx": "3.14.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.2.0",
    "@swc/core": "^1.3.103",
    "@types/node": "^20.10.5",
    "concurrently": "^8.2.2",
    "eslint": "8.57.0",
    "husky": "8.0.3",
    "lint-staged": "14.0.1",
    "nodemon": "^3.0.2",
    "tsc-watch": "^6.0.4",
    "tsup": "^8.0.1",
    "typescript": "^5.2.2"
  }
